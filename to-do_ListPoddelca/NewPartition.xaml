<Window x:Class="to_do_ListPoddelca.NewPartition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:to_do_ListPoddelca"
        mc:Ignorable="d"
        Title="NewPartition" Height="164" Width="500">
    <Grid>
        <StackPanel>
                <StackPanel Orientation="Horizontal">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="Icons" Checked="RadioButton_Checked">
                            <Image Source="/Image/Icons/1.png" Height="77" Width="69" />
                        </RadioButton>
                    </StackPanel>
                </Grid>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="Icons" Checked="RadioButton_Checked1">
                            <Image Source="/Image/Icons/2.png" Height="87" Width="59" />
                        </RadioButton>
                    </StackPanel>
                </Grid>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="Icons" Checked="RadioButton_Checked_1">
                            <Image Source="/Image/Icons/3.png" Height="92" Width="62" />
                        </RadioButton>
                    </StackPanel>
                </Grid>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="Icons" Checked="RadioButton_Checked_2">
                            <Image Source="/Image/Icons/4.png" Height="93" Width="68" />
                        </RadioButton>
                    </StackPanel>
                </Grid>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="Icons" Checked="RadioButton_Checked_3">
                            <Image Source="/Image/Icons/5.png" Height="92" Width="69" />
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <TextBlock Text="Напишить задачу"/>
            <TextBox Name="TextBox"/>
            <Button Content="Добавить" Click="Click_Dobavit"/>
        </StackPanel>
    </Grid>
</Window>
