<Window x:Class="to_do_ListPoddelca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:to_do_ListPoddelca"
        mc:Ignorable="d"
        Title="MainWindow" Height="164" Width="181">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" />
            <TextBox Width="150" Name="Login"/>
            <TextBlock Text="Password"/>
            <TextBox Name="Password"/>
            <TextBlock Text="" Name="Text"/>
            <Button Content="Sign in" Click="Button_Click"/>
            <Button Content="Sign up"/>
        </StackPanel>
    </Grid>
</Window>
